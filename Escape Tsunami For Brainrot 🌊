Accent1.Size = UDim2.new(0, 3, 0.5, 0)
Accent1.Position = UDim2.new(0, 6, 0.25, 0)
Accent1.BackgroundColor3 = Color3.fromRGB(130, 90, 230)
Accent1.BorderSizePixel = 0
Accent1.Parent = SecretBtn

local targetCFrame = CFrame.new(2607.50, -2.64, 0.00)
local activateTeleport = false

SecretBtn.MouseButton1Click:Connect(function()
    activateTeleport = true
    if Player.Character and Player.Character:FindFirstChildOfClass("Humanoid") then
        Player.Character:FindFirstChildOfClass("Humanoid").Health = 0
    end
end)

Player.CharacterAdded:Connect(function(char)
    if activateTeleport then
        local hrp = char:WaitForChild("HumanoidRootPart", 10)
        if hrp then
            task.wait(0)
            hrp.CFrame = targetCFrame
            activateTeleport = false
        end
    end
end)

